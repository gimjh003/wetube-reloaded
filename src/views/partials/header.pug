header
    a(href="/").header__logo
                    i.fab.fa-youtube
    nav
        ul
            li
                a(href="/search")
                    i.fas.fa-search
            if !loggedIn
                li
                    a(href="/login").header__btn Login
                li
                    a(href="/join").header__btn Join
            else
                li
                    a(href="/users/edit") Edit Profile
                li
                    a(href="/users/logout") Logout
                li
                    a(href="/videos/upload") Upload Video
                li
                    a(href=`/users/${loggedInBy._id}`)
                        if loggedInBy.avatarUrl === ""
                            span #{loggedInBy.username}
                        else
                            img(src="/"+loggedInBy.avatarUrl).header__avatar