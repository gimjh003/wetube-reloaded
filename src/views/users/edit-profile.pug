extends ../base

block content
    if loggedInBy.avatarUrl
        img(src="/"+loggedInBy.avatarUrl width="100" height="100")
    form(method="POST" enctype="multipart/form-data").edit-profile__form.user-form
        label(for="avatar") Avatar
        input(name="avatar" type="file" id="avatar" accept="image/*").default-input
        input(placeholder="Name" name="name" type="text" required value=loggedInBy.name).default-input
        input(placeholder="Email" name="email" type="email" required value=loggedInBy.email).default-input
        input(placeholder="Username" name="username" type="input" required value=loggedInBy.username).default-input
        input(placeholder="Location" name="location" type="text" value=loggedInBy.location).default-input
        input(type="submit" value="Update Profile").default-input
        if !loggedInBy.socialOnly
            div.edit-profile__password
                a(href="change-password") Change Password