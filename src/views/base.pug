doctype html 
html(lang="ko")
    head 
        title #{pageTitle} | #{siteName}
        link(href="https://unpkg.com/mvp.css" rel="stylesheet")
    body
        header
            h1=pageTitle
            nav
                ul
                    li
                        a(href="/") Home
                    li
                        a(href="/search") Search
                    if !loggedIn
                        li
                            a(href="/login") Login
                        li
                            a(href="/join") Join
                    else
                        li
                            a(href="/users/edit") Edit Profile
                        li
                            a(href="/users/logout") Logout
                        li
                            a(href="/my-profile") #{loggedInBy.username}
                        li
                            a(href="/videos/upload") Upload Video
        main
            block content
        include partials/footer.pug