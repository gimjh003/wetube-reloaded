mixin video(video)
    div.video-mixin
        a(href=`/videos/${video.id}`)
            div.video-mixin__thumb(style=`background-image:url(/${video.thumbUrl});background-size:cover;background-position:center;`)
        div.video-mixin__data
            a(href=`/videos/${video.id}`).video-mixin__title=video.title
            div.video-mixin__meta
                if video.owner.username
                    a(href=`/users/${video.owner._id}`) #{video.owner.username} - 
                else
                    a(href=`/users/${user._id}`) #{user.username} - 
                span #{video.meta.views} #{video.meta.views<2? "view":"views"}