extends base.pug
include mixins/comment
block content
    div#videoContainer(data-id=video._id)
        video(src=`/${video.fileUrl}`)
        div#videoController
            i#play.fas.fa-play
            span#currenTime 00:00
            span  / 
            span#totalTime 00:00
            input(type="range", step="0.1", min=0)#timeline
            i#mute.fas.fa-volume-up
            input(type="range", value="0.5", step="0.1", min="0", max="1")#volume
            i#fullScreen.fas.fa-expand
    div
        h1=video.title
        p=video.description
        div.videoCreator
            span=`Created by `
            a(href=`/users/${video.owner._id}`)=video.owner.username
        small=video.createdAt
        if String(video.owner._id) === loggedInBy._id
            a(href=`${video.id}/edit`) Edit Video &rarr;
            br
            a(href=`${video.id}/delete`) Delete Video &rarr;
    div.video__comment
        if loggedIn
            form.video__comment-form#commentForm
                textarea(name="" cols="30" rows="10" placeholder="Write your comment here.")#textarea
                button Add Comment
        div#comments
            ul
                each comment in video.comments.reverse()
                    li.video__comment(data-id=comment._id)
                        +comment(comment)
block scripts
    script(src="/static/js/videoPlayer.js")
    if loggedIn
        script(src="/static/js/commentSection.js")